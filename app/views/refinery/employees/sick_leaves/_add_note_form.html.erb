<div title="Pass on Parcel to someone else" style="min-width: 10rem;">
  <%= form_for @resource, :url => refinery.create_note_employees_sick_leave_path(@sick_leave),
               :html => { :multipart => true },
               :as => 'resource' do |f| %>

    <%= render '/refinery/admin/error_messages',
               :object => @resource,
               :include_object_name => false %>

    <div class="field">
      <% # we must only hint at multiple when it's a *new* record otherwise update fails. %>
      <%= f.file_field :file, :multiple => true %>
    </div>

    <p><%= f.submit 'Add Note', class: 'button round tiny' %></p>
  <% end %>
</div>
