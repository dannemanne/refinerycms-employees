<%= form_for sick_leave, url: [refinery, :employees, sick_leave] do |f| %>

  <span data-tooltip aria-haspopup="true" class="has-tip" title="Note: Half day is only
    used when you went to work in the morning but got sick during the day, or when you
    was sick in the morning but got better and came in to work during the day. It should
    not be used if you were sick on a day with reduced working hours.">Important Information!</span>

  <div class="row">
    <div class="medium-2 columns">
      <div class='field'>
        <%= f.label :start_date -%>
        <%= f.text_field :start_date, value: sick_leave.start_date || Date.today, class: 'js_date_field' -%>
      </div>
    </div>

    <div class="medium-3 columns">
      <div class='field'>
        <%= f.label :start_half_day -%>
        <%= f.check_box :start_half_day -%>
      </div>
    </div>

    <div class="medium-2 columns">
      <div class='field'>
        <%= f.label :end_date -%>
        <%= f.text_field :end_date, class: 'js_date_field' -%>
      </div>
    </div>

    <div class="medium-3 columns">
      <div class='field'>
        <%= f.label :end_half_day -%>
        <%= f.check_box :end_half_day -%>
      </div>
    </div>

    <div class="medium-2 columns">
      <%= f.submit 'Save', class: 'button round tiny' %>
    </div>
  </div>

<% end %>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1/themes/smoothness/jquery-ui.css' %>
<% end %>

<% content_for :javascripts do %>

  <script type="text/javascript">
    $(function(){
      $('.js_date_field').datepicker({ dateFormat: "yy-mm-dd" });
    });
  </script>
<% end %>
