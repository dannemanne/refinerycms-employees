<%= form_for [refinery, :employees_admin, @public_holiday] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @public_holiday,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :country %>
    <%= f.select :country, ::Refinery::Employees::Countries::COUNTRIES, {  }, :class => 'chzn-select', :'data-placeholder' => 'Search Country', :style => 'width: 300px;' %>
  </div>

  <div class='field'>
    <%= f.label :holiday_date -%>
    <%= f.text_field :holiday_date, class: 'js_date_field' -%>
  </div>

  <div class='field'>
    <%= f.label :half_day -%>
    <%= f.check_box :half_day -%>
  </div>


  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.employees.admin.public_holidays.public_holiday'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @public_holiday.title) -%>
<% end -%>


<% content_for :stylesheets do %>
  <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1/themes/smoothness/jquery-ui.css' %>
<% end %>

<% content_for :javascripts do %>

  <script type="text/javascript">
    $(function(){
      $('.js_date_field').datepicker({ dateFormat: "yy-mm-dd" });
    });
  </script>
<% end %>
