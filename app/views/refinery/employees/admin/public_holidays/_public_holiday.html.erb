<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(public_holiday) -%>">
  <span class='title'>
    <%= public_holiday.title %>
    <span class="preview">
      <%= t('.preview', holiday_date: l(public_holiday.holiday_date, :format => :short)) %>
    </span>
  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), '#', #refinery.employees_public_holiday_path(public_holiday),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_employees_admin_public_holiday_path(public_holiday),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.employees_admin_public_holiday_path(public_holiday),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => public_holiday.title),
        :method => :delete %>
  </span>
</li>
