<% content_for :body do %>

  <h4>Edit Expense Claim</h4>

  <div class="row">
    <div class="large-8 columns">

      <%= form_for @xero_expense_claim, url: refinery.employees_expense_claim_path(@xero_expense_claim) do |f| %>

        <label>For
          <%= f.collection_select :employee_id, ::Refinery::Employees::Employee.all, :id, :full_name %>
        </label>

        <label>Description
          <%= f.text_field :description %>
        </label>

        <%= f.submit t('.update', default: 'Update'), class: 'button round small' %>

      <% end %>

    </div>
  </div>

  <p><%= link_to 'Cancel', refinery.employees_expense_claim_path(@xero_expense_claim) %></p>
<% end %>

<%= render '/refinery/content_page' %>
