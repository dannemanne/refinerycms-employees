<% content_for :body do %>

  <h4>Edit Expense Claim</h4>

  <div class="row">
    <div class="large-8 columns">

      <%= form_for @xero_expense_claim, url: refinery.employees_expense_claim_path(@xero_expense_claim) do |f| %>
        <%= render 'form', f: f %>
        <%= f.submit t('.update', default: 'Update'), class: 'button round small' %>
      <% end %>

    </div>
  </div>

  <p><%= link_to t('.cancel', default: 'Cancel'), refinery.employees_expense_claim_path(@xero_expense_claim) %></p>
<% end %>

<%= render '/refinery/content_page' %>
