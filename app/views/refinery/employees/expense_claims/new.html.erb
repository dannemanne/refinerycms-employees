<% content_for :body do %>

  <h4>Add Expense Claim</h4>

  <div class="row">
    <div class="large-8 columns">

      <%= form_for @xero_expense_claim, url: refinery.employees_expense_claims_path do |f| %>

        <label>For
          <%= f.collection_select :employee_id, ::Refinery::Employees::Employee.all, :id, :full_name %>
        </label>

        <label>Description
          <%= f.text_field :description %>
        </label>

        <%= f.submit 'Add', class: 'button round small' %>

      <% end %>

    </div>
  </div>

  <p><%= link_to 'Go Back', refinery.employees_expense_claims_path %></p>

<% end %>

<%= render '/refinery/content_page' %>
