<% content_for :body do %>

  <h4>Add Expense Claim</h4>

  <div class="row">
    <div class="large-8 columns">

      <%= form_for @xero_expense_claim, url: refinery.employees_expense_claims_path do |f| %>
        <%= render 'form', f: f %>
        <%= f.submit t('.add', default: 'Add'), class: 'button round small' %>
      <% end %>

    </div>
  </div>

  <p><%= link_to t('.go_back', default: 'Go Back'), refinery.employees_expense_claims_path %></p>

<% end %>

<%= render '/refinery/content_page' %>
